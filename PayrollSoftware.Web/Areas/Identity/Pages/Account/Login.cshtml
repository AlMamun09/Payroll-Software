@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PayrollSoftware</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/account-styles.css" />
</head>
<body class="account-body d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="form-bg mx-auto">
            <div class="row g-0">
                <div class="col-lg-7 col-md-12 p-4 p-md-5">
                    <div class="text-center">
                        <h2 class="login-title">Sign In</h2>
                        <p class="desc-text mb-4">
                            Log in to access the payroll system.
                        </p>
                    </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="mb-3">
                            <input asp-for="Input.Email" class="form-control account-input" autocomplete="username" aria-required="true" placeholder="Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control account-input" autocomplete="current-password" aria-required="true" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label" style="color: #ced4da;">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="forgot">Forgot your password?</a>
                        </div>

                        <button id="login-submit" type="submit" class="button login-btn">Sign In</button>
                    </form>
                </div>
                <div class="col-lg-5 col-md-12 d-none d-lg-block">
                    <div class="register-area p-5 text-center">
                        <h2 class="register-title">Register</h2>
                        <p style="color: #FFFFFF;">
                            Don't have an account? You can create one to get started.
                        </p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="button signup-btn mt-4">Sign Up</a>
                    </div>
                </div>
                <div class="d-block d-lg-none text-center p-4">
                    <p class="text-white">Don't have an account?</p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="button register-btn">Sign Up</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
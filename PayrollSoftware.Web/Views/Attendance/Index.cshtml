@model PayrollSoftware.Infrastructure.Application.DTOs.AttendanceDto
@{
    ViewData["Title"] = "Attendance Management";
}

<link rel="stylesheet" href="//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

<div class="card" id="attendanceCard"
     data-list-url="@Url.Action("GetAttendanceJson", "Attendance")"
     data-create-get="@Url.Action("Create", "Attendance")"
     data-edit-get-template="@Url.Action("Edit", "Attendance")/"
     data-delete-template="@Url.Action("Delete", "Attendance")/">

    <div class="card-header">
        <h3 class="card-title m-0">
            <i class="fas fa-clock mr-2"></i>Attendance Management
        </h3>
        <div class="card-tools">
            <button id="btnAddAttendance" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Attendance
            </button>
        </div>
    </div>

    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-3">
                <select id="statusFilter" class="form-control">
                    <option value="">All Status</option>
                    <option value="Present">Present</option>
                    <option value="Absent">Absent</option>
                    <option value="Late">Late</option>
                    <option value="Half Day">Half Day</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="date" id="dateFilter" class="form-control" />
            </div>
            <div class="col-md-3">
                <select id="employeeFilter" class="form-control select2">
                    <option value="">All Employees</option>
                    @if (ViewBag.Employees != null)
                    {
                        foreach (var e in (IEnumerable<dynamic>)ViewBag.Employees)
                        {
                            <option value="@e.EmployeeId">@e.FullName</option>
                        }
                    }
                </select>
            </div>
        </div>

        <table id="attendanceTable" class="table table-bordered table-hover w-100">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Employee Name</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>In Time</th>
                    <th>Out Time</th>
                    <th>Working Hours</th>
                    <th>Late Entry</th>
                    <th>Early Leave</th>
                    <th style="width:100px;" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Data will be loaded via AJAX -->
            </tbody>
        </table>
    </div>
</div>

<!-- Hidden anti-forgery form to extract token for AJAX -->
<form id="__afForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<!-- Modal -->
<div class="modal fade" id="attendanceModal" tabindex="-1" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Attendance Entry</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-0">
                <!-- dynamic form content loads here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/crud-datatable.js"></script>
    <script src="~/js/crud-modal.js"></script>

    <script>
        window.__AntiForgeryToken = document.querySelector('#__afForm input[name="__RequestVerificationToken"]').value;

        $(function () {
            const $card = $('#attendanceCard');
            const listUrl = $card.data('list-url');

            // Routes for modal and actions
            const routes = {
                createGet: $card.data('create-get'),
                editGet: (id) => $card.data('edit-get-template') + id,
                delete: (id) => $card.data('delete-template') + id
            };

            // Initialize modal
            const attendanceModal = CrudModal.init({
                modalSelector: '#attendanceModal',
                addBtnSelector: '#btnAddAttendance',
                routes,
                createTitle: 'Add Attendance Record',
                editTitle: 'Edit Attendance Record',
                onSaved: () => dataTable.ajax.reload() // reload table when saved
            });

            // Initialize employee filter Select2
            $('#employeeFilter').select2({
                theme: 'bootstrap4',
                width: '100%',
                placeholder: 'Filter by Employee',
                allowClear: true
            });

            // Initialize DataTable
            const dataTable = $('#attendanceTable').DataTable({
                processing: true,
                serverSide: false,
                ajax: {
                    url: listUrl,
                    type: 'GET',
                    dataSrc: 'data',
                    error: function (xhr, error, thrown) {
                        console.error('DataTables Ajax Error:', xhr.responseText);
                    }
                },
                columns: [
                    { data: 'employeeCode', className: 'text-center' },
                    { data: 'employeeName' },
                    {
                        data: 'attendanceDate',
                        render: function (data) {
                            return data ? new Date(data).toLocaleDateString() : '';
                        }
                    },
                    {
                        data: 'status',
                        render: function (data) {
                            const statusClass = {
                                'Present': 'success',
                                'Absent': 'danger',
                                'Late': 'warning',
                                'Half Day': 'info'
                            }[data] || 'secondary';

                            return `<span class="badge badge-${statusClass}">${data}</span>`;
                        }
                    },
                    {
                        data: 'inTime',
                        render: function (data) {
                            return data || '-';
                        }
                    },
                    {
                        data: 'outTime',
                        render: function (data) {
                            return data || '-';
                        }
                    },
                    {
                        data: 'workingHours',
                        className: 'text-center',
                        render: function (data) {
                            return data ? data.toFixed(2) + ' hrs' : '0 hrs';
                        }
                    },
                    {
                        data: 'lateEntry',
                        className: 'text-center',
                        render: function (data) {
                            return data ? data + ' mins' : '-';
                        }
                    },
                    {
                        data: 'earlyLeave',
                        className: 'text-center',
                        render: function (data) {
                            return data ? data + ' mins' : '-';
                        }
                    },
                    {
                        data: 'attendanceId',
                        render: function (data, type, row) {
                            return `
                                <div class="text-center">
                                    <button class="btn btn-sm btn-info mr-1 js-edit" data-id="${data}" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger js-delete" data-id="${data}" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>`;
                        },
                        orderable: false,
                        className: 'text-center'
                    }
                ],
                order: [[2, 'desc']], // default sort: Date descending
                language: {
                    emptyTable: "No attendance records found",
                    zeroRecords: "No matching attendance records found"
                }
            });

            // Edit button handler
            $('#attendanceTable').on('click', '.js-edit', function () {
                const attendanceId = $(this).data('id');
                attendanceModal.openEdit(attendanceId);
            });

            // Delete button handler
            $('#attendanceTable').on('click', '.js-delete', function () {
                const attendanceId = $(this).data('id');
                if (confirm('Are you sure you want to delete this attendance record?')) {
                    $.ajax({
                        url: routes.delete(attendanceId),
                        type: 'POST',
                        headers: {
                            'RequestVerificationToken': window.__AntiForgeryToken
                        },
                        success: function (response) {
                            dataTable.ajax.reload();
                            showToast('success', 'Attendance record deleted successfully!');
                        },
                        error: function (xhr) {
                            showToast('error', 'Error deleting attendance record: ' + xhr.responseText);
                        }
                    });
                }
            });

            // Filter functionality
            $('#statusFilter, #dateFilter, #employeeFilter').change(function () {
                dataTable.ajax.reload();
            });

            // Extend DataTable to handle filters
            dataTable.on('preXhr.dt', function (e, settings, data) {
                data.statusFilter = $('#statusFilter').val();
                data.dateFilter = $('#dateFilter').val();
                data.employeeFilter = $('#employeeFilter').val();
            });

            function showToast(type, message) {
                alert(message); // Replace with proper toast implementation
            }
        });
    </script>
}
@{
    ViewData["Title"] = "Designations";
}

<link rel="stylesheet" href="//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" />

<div class="card" id="designationCard"
     data-list-url="@Url.Action("GetDesignationsJson", "Designation")"
     data-create-get="@Url.Action("Create", "Designation")"
     data-edit-get-template="@Url.Action("Edit", "Designation")/"
     data-delete-template="@Url.Action("Delete", "Designation")/">

    <div class="card-header">
        <h3 class="card-title m-0">
            <i class="fas fa-briefcase mr-2"></i>Designations
        </h3>
        <div class="card-tools">
            <button id="btnAddDesignation" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Designation
            </button>
        </div>
    </div>

    <div class="card-body">
        <table id="designationTable" class="table table-bordered table-hover w-100">
            <thead>
                <tr>
                    <th>Designation Name</th>
                    <th>Status</th>
                    <th style="width:120px;" class="text-center">Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<form id="__afForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<div class="modal fade" id="designationModal" tabindex="-1" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Designation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-0">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <script src="~/js/crud-datatable.js"></script>
    <script src="~/js/crud-modal.js"></script>

    <script>
        window.__AntiForgeryToken = document.querySelector('#__afForm input[name="__RequestVerificationToken"]').value;

        $(function () {
            const $card = $('#designationCard');
            const listUrl = $card.data('list-url');

            const routes = {
                createGet: $card.data('create-get'),
                editGet: (id) => $card.data('edit-get-template') + id,
                delete: (id) => $card.data('delete-template') + id
            };

            const designationModal = CrudModal.init({
                modalSelector: '#designationModal',
                addBtnSelector: '#btnAddDesignation',
                routes,
                createTitle: 'Create Designation',
                editTitle: 'Edit Designation',
                onSaved: () => designationTable.reload()
            });

            const designationTable = CrudTable.init({
                tableSelector: '#designationTable',
                listUrl: listUrl,
                idField: 'designationId',
                columns: [
                    { data: 'designationName' },
                    {
                        data: 'isActive',
                        render: function (d) {
                            return d
                                ? '<span class="badge badge-success">Active</span>'
                                : '<span class="badge badge-secondary">Inactive</span>';
                        }
                    }
                ],
                dataTables: {
                  columnDefs: [
                    { className: "text-center align-middle", targets: [1] }
                  ]
                },
                actions: {
                    editSelector: '.js-edit',
                    deleteSelector: '.js-delete',
                    renderButtons: (id, row) => `
                        <button class="btn btn-sm btn-warning mr-1 js-edit" data-id="${id}">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-danger js-delete" data-id="${id}">
                            <i class="fas fa-trash"></i>
                        </button>
                    `,
                    onEdit: (id) => designationModal.openEdit(id),
                    deleteUrl: (id) => routes.delete(id)
                }
            });
        });
    </script>
}


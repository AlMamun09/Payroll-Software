@{
    ViewData["Title"] = "Pending Leave Applications";
}

<link rel="stylesheet" href="//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" />

<div class="card" id="leaveCard" data-list-url="@Url.Action("GetPendingLeavesJson", "Leave")"
     data-edit-get-template="@Url.Action("Edit", "Leave")/"
     data-deny-template="@Url.Action("DenyLeave", "Leave")/"
     data-approve-template="@Url.Action("ApproveLeave", "Leave")/">

    <div class="card-header">
        <h3 class="card-title m-0">
            <i class="fas fa-clock mr-2"></i>Pending Leave Applications
        </h3>
        <div class="card-tools">
            <a asp-controller="Leave" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Leave
            </a>
        </div>
    </div>

    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-3">
                <select id="typeFilter" class="form-control">
                    <option value="">All Types</option>
                    <option value="Casual">Casual</option>
                    <option value="Sick">Sick</option>
                    <option value="Earned">Earned</option>
                    <option value="Unpaid">Unpaid</option>
                </select>
            </div>
        </div>

        <table id="leaveTable" class="table table-bordered table-hover w-100">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Employee Name</th>
                    <th>Leave Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Total Days</th>
                    <th>Status</th>
                    <th style="width:150px;" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Data will be loaded via AJAX -->
            </tbody>
        </table>
    </div>
</div>

<!-- Hidden anti-forgery form to extract token for AJAX -->
<form id="__afForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<!-- Modal used for Edit only -->
<div class="modal fade" id="leaveModal" tabindex="-1" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Leave Application</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-0">
                <!-- dynamic form content loads here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <script src="~/js/crud-datatable.js"></script>
    <script src="~/js/crud-modal.js"></script>

    <script>
        window.__AntiForgeryToken = document.querySelector('#__afForm input[name="__RequestVerificationToken"]').value;

        $(function () {
            const $card = $('#leaveCard');
            const listUrl = $card.data('list-url');

            // Routes for modal and actions (Edit only)
            const routes = {
                editGet: (id) => $card.data('edit-get-template') + id,
                deny: (id) => $card.data('deny-template') + id,
                approve: (id) => $card.data('approve-template') + id
            };

            // Initialize modal (Edit only)
            const leaveModal = CrudModal.init({
                modalSelector: '#leaveModal',
                routes,
                editTitle: 'Edit Leave Application',
                onSaved: () => dataTable.ajax.reload() // Reload the table when saved
            });

            // Make table reload function available globally for form callback
            window.leaveTableReload = function () {
                dataTable.ajax.reload();
            };

            // Initialize DataTable
            const dataTable = $('#leaveTable').DataTable({
                processing: true,
                serverSide: false,
                ajax: {
                    url: listUrl,
                    type: 'GET',
                    dataSrc: 'data',
                    error: function (xhr, error, thrown) {
                        console.error('DataTables Ajax Error:', xhr.responseText);
                    }
                },
                columns: [
                    { data: 'employeeCode', className: 'text-center' },
                    { data: 'employeeName' },
                    { data: 'leaveType' },
                    {
                        data: 'startDate',
                        render: function (data) {
                            return data ? new Date(data).toLocaleDateString() : '';
                        }
                    },
                    {
                        data: 'endDate',
                        render: function (data) {
                            return data ? new Date(data).toLocaleDateString() : '';
                        }
                    },
                    {
                        data: 'totalDays',
                        className: 'text-center',
                        render: function (data) {
                            return data || '0';
                        }
                    },
                    {
                        data: 'leaveStatus',
                        render: function (data) {
                            return `<span class="badge badge-warning">${data}</span>`;
                        }
                    },
                    {
                        data: 'leaveId',
                        render: function (data, type, row) {
                            return `
                            <div class="text-center">
                            <button class="btn btn-sm btn-success mr-1 js-approve" data-id="${data}" title="Approve">
                            <i class="fas fa-check"></i>
                            </button>
                            <button class="btn btn-sm btn-danger mr-1 js-deny" data-id="${data}" title="Deny">
                            <i class="fas fa-times"></i>
                            </button>
                            <button class="btn btn-sm btn-info js-edit" data-id="${data}" title="Edit">
                            <i class="fas fa-edit"></i>
                            </button>
                            </div>`;
                        },
                        orderable: false,
                        className: 'text-center'
                    }
                ],
                order: [[3, 'desc']], // default sort: Start Date descending
                language: {
                    emptyTable: "No pending leave records found",
                    zeroRecords: "No matching leaves found"
                }
            });

            // Approve button handler
            $('#leaveTable').on('click', '.js-approve', function () {
                const leaveId = $(this).data('id');
                Swal.fire({
                    title: 'Approve Leave?',
                    text: 'Are you sure you want to approve this leave application?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#28a745',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, approve it!',
                    cancelButtonText: 'Cancel',
                    reverseButtons: false
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: routes.approve(leaveId),
                            type: 'POST',
                            headers: {
                                'RequestVerificationToken': window.__AntiForgeryToken
                            },
                            success: function (response) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Approved!',
                                    text: response.message || 'Leave approved successfully!',
                                    confirmButtonColor: '#3085d6',
                                    timer: 2000,
                                    timerProgressBar: true
                                });
                                dataTable.ajax.reload();
                            },
                            error: function (xhr) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: xhr.responseJSON?.message || 'Error approving leave',
                                    confirmButtonColor: '#3085d6'
                                });
                            }
                        });
                    }
                });
            });

            // Deny button handler
            $('#leaveTable').on('click', '.js-deny', function () {
                const leaveId = $(this).data('id');
                Swal.fire({
                    title: 'Deny Leave?',
                    text: 'Are you sure you want to reject this leave application?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, deny it!',
                    cancelButtonText: 'Cancel',
                    reverseButtons: false
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: routes.deny(leaveId),
                            type: 'POST',
                            headers: {
                                'RequestVerificationToken': window.__AntiForgeryToken
                            },
                            success: function (response) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Denied!',
                                    text: response.message || 'Leave rejected successfully!',
                                    confirmButtonColor: '#3085d6',
                                    timer: 2000,
                                    timerProgressBar: true
                                });
                                dataTable.ajax.reload();
                            },
                            error: function (xhr) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: xhr.responseJSON?.message || 'Error rejecting leave',
                                    confirmButtonColor: '#3085d6'
                                });
                            }
                        });
                    }
                });
            });

            // Edit button handler
            $('#leaveTable').on('click', '.js-edit', function () {
                const leaveId = $(this).data('id');
                leaveModal.openEdit(leaveId);
            });

            // Filter functionality
            $('#typeFilter').change(function () {
                dataTable.ajax.reload();
            });

            // Extend DataTable to handle filters
            dataTable.on('preXhr.dt', function (e, settings, data) {
                data.typeFilter = $('#typeFilter').val();
            });
        });
    </script>
}
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    :root {
        --bg-primary: #1a1a2e;
        --bg-secondary: #16213e;
        --bg-card: #0f3460;
        --accent: #e94560;
        --text-primary: #ffffff;
        --text-secondary: #b0b0b0;
        --border: #2d4059;
    }

    .dashboard-content {
        padding: 20px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding: 10px 0;
        border-bottom: 1px solid var(--border);
    }

    .page-title h1 {
        font-size: 1.8rem;
        color: var(--text-primary);
        margin-bottom: 5px;
    }

    .breadcrumb {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: var(--accent);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background-color: var(--bg-card);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-left: 4px solid var(--accent);
    }

        .stat-card.danger {
            border-left-color: #ff6b6b;
        }

        .stat-card.warning {
            border-left-color: #ffd93d;
        }

        .stat-card.success {
            border-left-color: #6bcf7f;
        }

    .stat-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .stat-title {
        font-size: 0.9rem;
        color: var(--text-secondary);
        font-weight: 500;
    }

    .stat-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

        .stat-icon.primary {
            background-color: var(--accent);
        }

        .stat-icon.danger {
            background-color: #ff6b6b;
        }

        .stat-icon.warning {
            background-color: #ffd93d;
        }

        .stat-icon.success {
            background-color: #6bcf7f;
        }

    .stat-value {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .stat-change {
        font-size: 0.85rem;
        display: flex;
        align-items: center;
    }

        .stat-change.negative {
            color: #ff6b6b;
        }

        .stat-change.positive {
            color: #6bcf7f;
        }

    /* Dashboard Grid */
    .dashboard-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 20px;
    }

    .card {
        background-color: var(--bg-card);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        border: 1px solid var(--border);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--border);
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .card-action {
        color: var(--accent);
        font-size: 0.9rem;
        text-decoration: none;
        font-weight: 500;
    }

    /* Chart Placeholder */
    .chart-placeholder {
        height: 200px;
        background-color: var(--bg-secondary);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-secondary);
        margin-bottom: 20px;
    }

    /* Activity List */
    .activity-list {
        list-style: none;
    }

    .activity-item {
        padding: 10px 0;
        border-bottom: 1px solid var(--border);
    }

    .activity-text {
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .activity-time {
        font-size: 0.8rem;
        color: var(--text-secondary);
    }

    /* Leads List */
    .leads-list {
        list-style: none;
    }

    .lead-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid var(--border);
    }

    .lead-info h4 {
        font-size: 0.95rem;
        margin-bottom: 3px;
    }

    .lead-info p {
        font-size: 0.8rem;
        color: var(--text-secondary);
    }

    .lead-value {
        font-weight: 600;
        color: var(--accent);
    }

    /* Module Cards */
    .modules-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .module-card {
        background-color: var(--bg-card);
        border-radius: 10px;
        padding: 20px;
        border: 1px solid var(--border);
        transition: transform 0.3s;
    }

        .module-card:hover {
            transform: translateY(-5px);
        }

    .module-icon {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        background-color: var(--accent);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
        color: white;
        font-size: 1.2rem;
    }

    .module-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .module-description {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin-bottom: 15px;
    }

    .module-features {
        list-style: none;
    }

        .module-features li {
            padding: 5px 0;
            color: var(--text-secondary);
            font-size: 0.85rem;
        }

            .module-features li:before {
                content: "•";
                color: var(--accent);
                margin-right: 8px;
            }

    /* Quick Actions */
    .quick-actions {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }

    .action-btn {
        background: var(--accent);
        color: white;
        border: none;
        padding: 12px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 0.9rem;
        transition: background 0.3s;
    }

        .action-btn:hover {
            background: #d13454;
        }

        .action-btn.success {
            background: #6bcf7f;
        }

            .action-btn.success:hover {
                background: #5bb86d;
            }

        .action-btn.warning {
            background: #ffd93d;
            color: #333;
        }

            .action-btn.warning:hover {
                background: #e6c437;
            }

        .action-btn.info {
            background: #4895ef;
        }

            .action-btn.info:hover {
                background: #3a7bc8;
            }

    /* Responsive */
    @@media (max-width: 1200px) {
        .dashboard-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 768px) {
        .dashboard-content {
            padding: 15px;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }

        .quick-actions {
            grid-template-columns: 1fr;
        }
    }
</style>


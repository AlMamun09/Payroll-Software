@model PayrollSoftware.Infrastructure.Application.DTOs.DashboardDto
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Quick Actions Row -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-bolt"></i> Quick Actions</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-sm-6 col-md-3 mb-3">
                                <a asp-controller="Employee" asp-action="Create" class="btn btn-primary btn-block">
                                    <i class="fas fa-user-plus"></i> Add Employee
                                </a>
                            </div>
                            <div class="col-12 col-sm-6 col-md-3 mb-3">
                                <a asp-controller="Attendance" asp-action="Create" class="btn btn-success btn-block">
                                    <i class="fas fa-calendar-plus"></i> Mark Attendance
                                </a>
                            </div>
                            <div class="col-12 col-sm-6 col-md-3 mb-3">
                                <a asp-controller="Payroll" asp-action="Index" class="btn btn-info btn-block">
                                    <i class="fas fa-calculator"></i> Process Payroll
                                </a>
                            </div>
                            <div class="col-12 col-sm-6 col-md-3 mb-3">
                                <a asp-controller="Leave" asp-action="PendingLeaves" class="btn btn-warning btn-block">
                                    <i class="fas fa-tasks"></i> Pending Leaves
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Employee Statistics Row -->
        <div class="row">
            <div class="col-12">
                <h5 class="mb-3"><i class="fas fa-users"></i> Employee Statistics</h5>
            </div>
        </div>
        <div class="row">
            <!-- Total Employees -->
            <div class="col-12 col-sm-6 col-md-4">
                <div class="info-box">
                    <span class="info-box-icon bg-info elevation-1"><i class="fas fa-users"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Employees</span>
                        <span class="info-box-number">@Model.TotalEmployees</span>
                    </div>
                </div>
            </div>

            <!-- Active Employees -->
            <div class="col-12 col-sm-6 col-md-4">
                <div class="info-box">
                    <span class="info-box-icon bg-success elevation-1"><i class="fas fa-user-check"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Active Employees</span>
                        <span class="info-box-number">@Model.ActiveEmployees</span>
                    </div>
                </div>
            </div>

            <!-- Inactive Employees -->
            <div class="col-12 col-sm-6 col-md-4">
                <div class="info-box">
                    <span class="info-box-icon bg-secondary elevation-1"><i class="fas fa-user-times"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Inactive Employees</span>
                        <span class="info-box-number">@Model.InactiveEmployees</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Today's Attendance Row -->
        <div class="row mt-3">
            <div class="col-12">
                <h5 class="mb-3"><i class="fas fa-calendar-check"></i> Today's Attendance</h5>
            </div>
        </div>
        <div class="row">
            <!-- Present Today -->
            <div class="col-12 col-sm-6 col-md-4">
                <div class="info-box">
                    <span class="info-box-icon bg-success elevation-1"><i class="fas fa-check-circle"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Present Today</span>
                        <span class="info-box-number">@Model.TotalPresentToday</span>
                    </div>
                </div>
            </div>

            <!-- Absent Today -->
            <div class="col-12 col-sm-6 col-md-4">
                <div class="info-box">
                    <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-times-circle"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Absent Today</span>
                        <span class="info-box-number">@Model.TotalAbsentToday</span>
                    </div>
                </div>
            </div>

            <!-- Late Today -->
            <div class="col-12 col-sm-6 col-md-4">
                <div class="info-box">
                    <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-clock"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Late Arrivals Today</span>
                        <span class="info-box-number">@Model.TotalLateToday</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payroll Statistics Row -->
        <div class="row mt-3">
            <div class="col-12">
                <h5 class="mb-3"><i class="fas fa-money-bill-wave"></i> Payroll Statistics (This Month)</h5>
            </div>
        </div>
        <div class="row">
            <!-- Total Payrolls This Month -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-primary elevation-1"><i class="fas fa-file-invoice-dollar"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Payrolls</span>
                        <span class="info-box-number">@Model.TotalPayrollsThisMonth</span>
                    </div>
                </div>
            </div>

            <!-- Pending Payments -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-hourglass-half"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Pending Payments</span>
                        <span class="info-box-number">@Model.PendingPayments</span>
                    </div>
                </div>
            </div>

            <!-- Completed Payments -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-success elevation-1"><i class="fas fa-check-double"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Completed Payments</span>
                        <span class="info-box-number">@Model.CompletedPayments</span>
                    </div>
                </div>
            </div>

            <!-- Total Payroll Amount -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-gradient-success elevation-1"><i class="fas fa-money-bill-wave"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Amount</span>
                        <span class="info-box-number">
                            @Model.TotalPayrollAmountThisMonth.ToString("N0")
                            <small style="font-size: 0.6em; font-weight: normal;"> BDT</small>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->